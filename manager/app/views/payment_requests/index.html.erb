<h1>List of pending Payment Requests</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Description</th>
      <th>Status</th>
      <th>Actions</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_requests.each do |pr| %>
      <tr>
        <td><%= "#{pr.amount} #{pr.currency}" %></td>
        <td><%= pr.description %></td>
        <td><%= pr.status %></td>
        <td>
          <% if pr.status.eql?(PaymentRequest::PENDING_STATUS) %>
            <%= link_to "Accept", accept_payment_request_path(id: pr.id), method: :patch %>
            <%= link_to "Reject", reject_payment_request_path(id: pr.id), method: :patch %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
